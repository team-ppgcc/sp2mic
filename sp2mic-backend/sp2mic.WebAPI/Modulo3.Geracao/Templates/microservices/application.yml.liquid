spring:
  application:
    name: {{nomeMicrosservicoTodoMinusculo}}
  profiles:
    active: zone1
  config:
    import: optional:consul:{{consulHost}}:{{consulPort}}
  cloud:
    consul:
      host: {{consulHost}}
      port: {{consulPort}}
      config:
        format: yaml
  datasource:
    url: jdbc:sqlserver://{{databaseHost}}:{{databasePort}};database={{databaseName}};trustServerCertificate=true
    username: {{databaseUserName}}
    password: {{databasePassword}}
    driver-class-name: com.microsoft.sqlserver.jdbc.SQLServerDriver
  jpa:
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.SQLServerDialect
      ddl-auto: none

logging:
  level:
    org.springframework.cloud.consul: DEBUG
